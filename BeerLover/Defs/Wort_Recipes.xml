<Defs>

  <RecipeDef>
    <defName>Make_RimronaWort</defName>
    <label>make rimrona wort</label>
    <description>Make rimrona wort from hops and corn.</description>
    <jobString>Making rimrona wort.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawHops</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawCorn</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawHops</li>
        <li>RawCorn</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RimronaWort>5</RimronaWort>
    </products>
  </RecipeDef>
  
